generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  habits    Habit[]
}

model Habit {
  id        String       @id @default(uuid())
  title     String
  userId    String
  user      User         @relation(fields: [userId], references: [id])
  entries   HabitEntry[]
  createdAt DateTime     @default(now())
}

model HabitEntry {
  id        String   @id @default(uuid())
  habitId   String
  habit     Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)
  date      DateTime
  status    String // "completed", "skipped", etc.
  createdAt DateTime @default(now())

  @@unique([habitId, date])
}
